{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "./lib/",
    "baseUrl": ".",
    "noImplicitAny": false,
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true
  },
  "include": ["./src/**/*.ts", "./__tests__/**/*.ts"],
  "exclude": ["node_modules", "lib", "dist"]
}
